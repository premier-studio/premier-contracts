{
    "name": "@premier-labs/contracts",
    "version": "0.0.77",
    "license": "MIT",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "build": "yarn clean && hardhat compile && yarn tsc -p tsconfig.build.json",
        "clean": "rm -rf dist artifacts cache typechain",
        "deploy": "hardhat deploy",
        "lint": "yarn lint:sol && yarn lint:ts",
        "lint:sol": "solhint --max-warnings 0 contracts/**/*.sol",
        "lint:ts": "yarn eslint components deploy test scripts system types mock",
        "re": "yarn clean && yarn build",
        "start": "FORK=MAINNET FORK_BN=16226501 yarn hardhat node --hostname 0.0.0.0",
        "test": "hardhat test"
    },
    "dependencies": {
        "@typechain/ethers-v5": "^10.2.0",
        "@typechain/hardhat": "^6.1.5",
        "hardhat": "^2.12.4",
        "typechain": "^8.1.1",
        "typescript": "^4.9.5"
    },
    "devDependencies": {
        "@nomiclabs/hardhat-ethers": "^2.2.2",
        "@nomiclabs/hardhat-etherscan": "^3.1.5",
        "@nomiclabs/hardhat-solhint": "^3.0.0",
        "@nomiclabs/hardhat-waffle": "^2.0.3",
        "@openzeppelin/contracts": "^4.8.0",
        "@types/chai": "^4.2.22",
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.11.6",
        "@typescript-eslint/eslint-plugin": "^5.54.1",
        "@typescript-eslint/parser": "^5.54.1",
        "chai": "^4.3.4",
        "dotenv": "^16.0.3",
        "eslint": "^8.1.0",
